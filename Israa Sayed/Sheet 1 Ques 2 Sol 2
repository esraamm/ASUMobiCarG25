 
int LED[]={4,5,6,7};


void setup()
{
for(int i=0 ; i<4;i++)
{
  pinMode(LED[i],OUTPUT);
  
}


}

void loop()
{
 for(int i=0;i<4;i++)
 {
   digitalWrite(LED[i],HIGH);
   delay(1000);
   digitalWrite(LED[i],LOW);
   
   
 }
 for(int i=4;i>0;i--)
 {
   digitalWrite(LED[i],HIGH);
   delay(1000);
   digitalWrite(LED[i],LOW);
   
   
 }
 

}
